<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#A5D8FF"
    android:padding="16dp">

    <!-- Title Section -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Your Meal Your Way!"
        android:textColor="#6B95CC"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold" />

    <!-- Ghost Image -->
    <ImageView
        android:id="@+id/ghostImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ghost_weight"
    android:contentDescription="Ghost lifting weights"
    android:layout_marginTop="16dp" />

    <!-- Protein Goal Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Your Protein Goal:"
            android:textColor="#6B95CC"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/proteinGoalInput"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="120"
            android:inputType="number"
            android:backgroundTint="#CCCCCC"
            android:gravity="center"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="g"
            android:textColor="#6B95CC"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Ingredients Section -->
    <TextView
        android:id="@+id/ingredientsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enter Your Ingredients:"
        android:textColor="#6B95CC"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium" />

    <EditText
        android:id="@+id/ingredientsInput"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:hint="Ground Beef\nBroccoli\nEggs\nCabbage\nOnion..."
        android:backgroundTint="#CCCCCC"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="8dp" />

    <!-- Generate Button -->
    <Button
        android:id="@+id/generateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Generate"
        android:backgroundTint="#FFB6E5"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp" />
</LinearLayout>
